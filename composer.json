{
    "name": "whitecube/laravel-links",
    "description": "Store & resolve internal URLs without having to worry about route, slug or domain changes",
    "keywords": [
        "whitecube",
        "laravel",
        "url",
        "link",
        "blade"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Whitecube\\Links\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Whitecube\\Links\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Toon Van den Bos",
            "email": "toon@whitecube.be"
        }
    ],
    "require": {
        "php": ">=8.1",
        "laravel/framework": "^10.40"
    },
    "require-dev": {
        "pestphp/pest": "^2.31",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.21"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Whitecube\\Links\\ServiceProvider"
            ],
            "aliases": {
                "Links": "Whitecube\\Links\\Facades\\Links"
            }
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}